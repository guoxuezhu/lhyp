<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/user_icon_2"
        android:gravity="center"
        android:text="音频控制"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="音频IP:"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_yinpin_ip"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:background="@drawable/layout_et_bg"
            android:digits="0123456789."
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text="192.168.1.18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_connect"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style"
            android:text="连接"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_quan"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_style"
            android:text="调用预设"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style"
            android:text="系统静音开"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_style"
            android:text="系统静音关"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style"
            android:text="混音前音量"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_style"
            android:text="混音后音量"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接" />

        <Button
            android:id="@+id/btn_send1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空" />

        <Button
            android:id="@+id/btn_send2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静音开" />

        <Button
            android:id="@+id/btn_send3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="静音关" />


        <Button
            android:id="@+id/btn_send4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统静音开" />

        <Button
            android:id="@+id/btn_send5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统静音关" />


        <Button
            android:id="@+id/btn_send6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量+" />

        <Button
            android:id="@+id/btn_send7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量-" />

        <Button
            android:id="@+id/btn_send17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码复位" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_send10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运行时间" />

        <Button
            android:id="@+id/btn_send11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前预设" />

        <Button
            android:id="@+id/btn_send12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调用预设" />

        <Button
            android:id="@+id/btn_send13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读混音前音量" />


        <Button
            android:id="@+id/btn_send14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置混音前音量" />

        <Button
            android:id="@+id/btn_send15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读混音前通道静音状态" />


        <Button
            android:id="@+id/btn_send16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="读混音后通道静音状态" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>